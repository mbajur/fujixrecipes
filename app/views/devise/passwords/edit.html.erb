<%= render layout: 'devise/layout' do %>
  <h2 class="h4 mb-3">Change your password</h2>

  <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, data: { turbo: false } }) do |f| %>
    <% render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", label: 'New password', help: "#{@minimum_password_length} characters minimum" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", label: 'Confirm new password' %>

    <div class="actions">
      <%= f.submit "Change my password", class: 'btn btn-primary w-100 my-2' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
<% end %>

<%= render layout: 'devise/layout' do %>
  <h1 class="h3 mb-4 fw-normal">Sign in</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { data: { turbo: false } }) do |f| %>
    <div class="form-floating" style="border-bottom-radius: 0">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control border-bottom-radius-none' %>
      <%= f.label :email %>
    </div>

    <div class="form-floating">
      <%= f.password_field :password, autofocus: true, autocomplete: "current-password", class: 'form-control border-top-radius-none border-top-0' %>
      <%= f.label :password %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="checkbox my-2">
        <label for="user_remember_me">
          <%= f.check_box :remember_me %>
          Remember me
        </label>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Sign in", class: 'btn btn-primary btn-lg w-100 my-2' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
<% end %>

<div class="row">
  <% recipes.each do |recipe| %>
    <div class="col-12 col-md-4">
      <%= render 'recipes/recipe_card', recipe: recipe %>
    </div>
  <% end %>
</div>

<%== pagy_bootstrap_nav(pagy) if recipes.any? %>

<% if recipes.none? %>
  <p class="lead text-center">No recipes to show</p>
<% end %>
